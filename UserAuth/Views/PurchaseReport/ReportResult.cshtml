@model UserAuth.ViewModels.PurchaseReportViewModel

<div class="container mt-5">
    <div class="text-center mb-4">
        <h2><i class="fas fa-file-alt"></i> Purchase Report</h2>
        <p class="lead">
            <strong>Report From:</strong> @Model.FromDate.ToString("d") to @Model.ToDate.ToString("d")
        </p>
    </div>

    <table class="table table-hover table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th><i class="fas fa-box"></i> Product Name</th>
                <th><i class="fas fa-sort-numeric-up"></i> Quantity</th>
                <th><i class="fas fa-dollar-sign"></i> Price</th>
                <th><i class="fas fa-money-bill-alt"></i> Total Price</th>
                <th><i class="fas fa-calendar-alt"></i> Purchase Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model.Purchases)
            {
                <tr>
                    <td>@purchase.ProductName</td>
                    <td>@purchase.Quantity</td>
                    <td>@purchase.Price.ToString("C")</td>
                    <td>@purchase.TotalPrice.ToString("C")</td>
                    <td>@purchase.Date.ToString("g")</td>
                </tr>
            }
            <tr>
                <td colspan="3" class="text-right"><strong>Total Purchase Value:</strong></td>
                <td colspan="2"><strong>@Model.TotalPurchaseValue.ToString("C")</strong></td>
            </tr>
        </tbody>
    </table>

    <div class="text-center mt-5">
        <a class="btn btn-primary" href="@Url.Action("Index")">
            <i class="fas fa-arrow-left"></i> Back
        </a>
        <button class="btn btn-secondary" onclick="printReport()">
            <i class="fas fa-print"></i> Print
        </button>
    </div>
</div>

@section Scripts {
    <script>
        function printReport() {
            window.print(); // This will trigger the browser's print dialog
        }
    </script>
}