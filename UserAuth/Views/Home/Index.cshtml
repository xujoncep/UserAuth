@model UserAuth.ViewModels.DashboardViewModel

@{
    ViewBag.Title = "Dashboard";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center fw-bolder" style="color:#C71A40;">Inventory Management Dashboard</h1>

    <div class="row fw-bolder">
        <!-- Total Inventory Value -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary h-100 rounded-3 shadow">
                <div class="card-body position-relative">
                    <i class="fas fa-dollar-sign fa-5x position-absolute top-0 end-0 p-3 opacity-25"></i>
                    <h5 class="card-title">Total Inventory Value</h5>
                    <p class="card-text display-4">@Model.TotalInventoryValue.ToString("C")</p>
                </div>
            </div>
        </div>
        <!-- Total Products -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success h-100 rounded-3 shadow">
                <div class="card-body position-relative">
                    <i class="fas fa-boxes fa-5x position-absolute top-0 end-0 p-3 opacity-25"></i>
                    <h5 class="card-title">Total Products</h5>
                    <p class="card-text display-4">@Model.TotalProducts</p>
                </div>
            </div>
        </div>
        <!-- Total Categories -->
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-info h-100 rounded-3 shadow">
                <div class="card-body position-relative">
                    <i class="fas fa-tags fa-5x position-absolute top-0 end-0 p-3 opacity-25"></i>
                    <h5 class="card-title">Total Categories</h5>
                    <p class="card-text display-4">@Model.TotalCategories</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Products per Category -->
    <h2 class="mt-5">Products per Category</h2>
    <div class="row fw-bolder">
        @foreach (var category in Model.CategoryProductCounts)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card border-0 shadow rounded-3 h-100">
                    <div class="card-header bg-light border-0 rounded-top">
                        <i class="fas fa-tag text-primary"></i>
                        <strong>@category.CategoryName</strong>
                    </div>
                    <div class="card-body">
                        <p class="card-text">
                            <i class="fas fa-box"></i> Number of Products: @category.ProductCount
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
