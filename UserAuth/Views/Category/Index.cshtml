@model IEnumerable<UserAuth.Models.Category>

<div class="container mt-4">
    <h2>Category List</h2>
    <button class="btn btn-primary" onclick="showAddEditModal(0)">Add New Category</button>

    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>CategoryId</th>
                <th>Category Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td>
                        <button class="btn btn-sm btn-warning" onclick="showAddEditModal(@category.CategoryId)">Edit</button>
                        <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal for Add/Edit -->
<div id="categoryModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="categoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="categoryModalLabel">Add/Edit Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- The form will be loaded here via AJAX -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showAddEditModal(id) {
            $.ajax({
                url: '/Category/AddOrEdit/' + id,
                type: 'GET',
                success: function (result) {
                    $('.modal-body').html(result);
                    $('#categoryModal').modal('show');
                },
                error: function () {
                    alert('Error loading form.');
                }
            });
        }
    </script>
}
