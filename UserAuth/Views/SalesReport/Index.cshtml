@model UserAuth.ViewModels.SalesReportViewModel

<div class="container mt-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6">
        <h2 class="text-center mb-4"><i class="fas fa-file-alt"></i> Generate Sales Report</h2>
        <form asp-action="GenerateReport" method="post">
            <div class="form-row">
                <!-- From Date Input -->
                <div class="form-group col-md-6 offset-md-3">
                    <label for="FromDate"><i class="fas fa-calendar-alt"></i> From Date</label>
                    <input type="date" class="form-control" asp-for="FromDate" />
                </div>
            </div>
            <div class="form-row mt-3">
                <!-- To Date Input -->
                <div class="form-group col-md-6 offset-md-3">
                    <label for="ToDate"><i class="fas fa-calendar-alt"></i> To Date</label>
                    <input type="date" class="form-control" asp-for="ToDate" />
                </div>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-file-download"></i> Generate Report
                </button>
            </div>
        </form>
    </div>
</div>
