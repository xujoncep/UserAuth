@model UserAuth.ViewModels.AssignRoleViewModel

<form asp-action="AssignRole" method="post">
    <div class="form-group">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input asp-for="FullName" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Role" class="control-label">Role</label>
        <select asp-for="Role" class="form-control" asp-items="Model.Roles"></select>
    </div>

    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-success">Assign</button>
</form>
